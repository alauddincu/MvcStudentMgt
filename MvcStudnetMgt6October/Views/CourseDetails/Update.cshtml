@using (Html.BeginForm("Update", "CourseDetails", FormMethod.Post))
//@using (Html.BeginForm("Delete", "CourseDetails", FormMethod.Post))
{
    <div>
        <table>
            <tr>
                <td>Course Id:</td>
                <td>
                    <input type="text" name="cid1" size="10" value="@ViewBag.cid">
                    <input type="submit" name="show" value="Show">
                </td>
            </tr>

            <tr>
                <td>Course Name:</td>
                <td><input type="text" name="cname1" size="10" value="@ViewBag.cname"></td>

            </tr>
            <tr>
                <td>Course Marks:</td>
                <td><input type="text" name="cmarks" size="10" value="@ViewBag.cmarks"></td>
            </tr>

            <tr>
                <td>
                    <input type="submit" name="update" value="Update">

                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" name="remove" value="Remove">

                </td>
            </tr>


        </table>
        <span>
            @ViewBag.Msg
        </span>

    </div>
}